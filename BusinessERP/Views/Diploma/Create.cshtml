@model Diploma
@{ 
    ViewBag.Title = "Create Diploma";
}

<h1> @ViewBag.Title</h1>
<form asp-controller="Diploma" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>            
    <div class="form-group col-md-6">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="@Model.Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="TeacherName"></label>
        <input class="form-control" asp-for="@Model.TeacherName" value="@ViewBag.UserName" readonly/>
        <span asp-validation-for="TeacherName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="StudentName"></label>
        <input class="form-control" asp-for="@Model.StudentName" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Description"></label>
        <textarea class="form-control" rows="3" asp-for="@Model.Description" ></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="FilePath"></label>
        <input type="file" class="form-control-file" />
    </div>
    <div class="form-group col-md-6">
        <input type="submit" value="Create" class="btn btn-dark" style="width:auto" />
    </div>
</form>